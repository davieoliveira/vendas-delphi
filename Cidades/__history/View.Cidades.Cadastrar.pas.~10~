unit View.Cidades.Cadastrar;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, View.Herancas.Cadastrar, Data.DB,
  Vcl.StdCtrls, Vcl.Buttons, Vcl.ExtCtrls, Vcl.Mask, Vcl.DBCtrls;

type
  TViewCidadesCadastrar = class(TViewHerancasCadastrar)
    LabelCod: TLabel;
    EditCodCidade: TDBEdit;
    LabelNome: TLabel;
    EditNomeCidade: TDBEdit;
    LabelUF: TLabel;
    LabelCodIBGE: TLabel;
    EditCodigoIBGE: TDBEdit;
    ComboBoxUF: TDBComboBox;
    procedure BtnGravarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  ViewCidadesCadastrar: TViewCidadesCadastrar;

implementation

{$R *.dfm}

uses Model.Cidade.DM;

procedure TViewCidadesCadastrar.BtnGravarClick(Sender: TObject);
begin
  inherited;

  if(Trim(EditNomeCidade.Text).IsEmpty)then
  begin
    EditNomeCidade.SetFocus;
    raise Exception.Create('Preencha o campo nome');
  end;

  if(Trim(ComboBoxUF.Text).IsEmpty)then
  begin
    ComboBoxUF.SetFocus;
    raise Exception.Create('Preencha o campo UF');
  end;

end;

end.
